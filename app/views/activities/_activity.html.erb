<%= will_paginate @activities %>

<li id="activity-<%= activity.id %>">
  <span class="user"><%= link_to activity.user.name, activity.user %></span>
  <span class="activity"><%= activity.activity %></span>
  <span class="minutes"><%= activity.minutes %></span>
  <span class="minutes"><%= activity.comments %></span>
  <span class="timestamp">
    Workout was <%= time_ago_in_words(activity.date) %> ago.
      <%= link_to "delete", activity, method: :delete,
                                       data: { confirm: "You sure?" } %>
      <a href="/activities/<%=activity.id%>/edit">edit</a>
  </span>
</li>
